<div class="type_form">
    <h1><%= title %></h1>
    <% if (typeof(type) !== 'undefined') { %> 
        <h1>Only admin can update</h1> 
    <% } %>
    <form method="POST" action="">
        <div class="getName">
            <label for="name">Type Name</label>
            <input type="text" name="name" required="true"
                value="<%= (typeof(type) === 'undefined') ? '' : type.name %>">
        </div>
        <div class="getDescription">
            <label for="description">Description</label>
            <textarea name="description" required="true"><%= (typeof(type) === 'undefined') ? '' : type.description %>
            </textarea>
        </div>
        <% if (typeof(type) !== 'undefined') { %>
            <div class="getStatus">
                <label for="status">Enter admin password</label>
                <input type="text" name="status">
            </div>
        <% } %>
        <input type="submit" value="Submit">
    </form>
    <% if ('undefined' !== typeof(errors)) { %>
        <ul>
            <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>
</div>